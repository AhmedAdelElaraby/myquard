<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.CreateEmailCompany">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/c1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backing"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:id="@+id/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_email_looking_for_ajob"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_25sdp"
                android:textStyle="bold"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:textColor="#13718D"
                android:textSize="20sp"
                android:id="@+id/textcreate" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutCommercial_Registration_No"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/commercial_registration_no"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textcreate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CommercialRegistrationNo"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutCompanyName"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/company_name"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutCommercial_Registration_No">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CompanyName"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutnumberphone"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/number_phone"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutCompanyName">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/numberphone"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/email"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutnumberphone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/style_button"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutEmail">
    <Spinner
        android:id="@+id/TypeofCompany"
        android:layout_width="match_parent"
        android:layout_height="57dp"

        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/ll2"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/style_button"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="57dp"

                android:id="@+id/Headquarters"/>
        </LinearLayout>



            <TextView
                android:id="@+id/inputTextLayoutcommercialregisterphoto"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                style="@style/text"
                android:gravity="start|center"
                android:drawablePadding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/style_button"
                android:drawableEnd="@drawable/upload"

                android:text="@string/commercial_register_photo"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll2"/>



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutpassword"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/password"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutcommercialregisterphoto">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutpasswordnewconfert"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/confart_new_password"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutpassword">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confermpassword"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <RadioButton
                android:textColor="#13718D"
                android:buttonTint="#13718D"
                android:text="@string/yes"
                android:id="@+id/yes"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutpasswordnewconfert"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Send"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/style_buttonsignup"
                android:elevation="3dp"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:includeFontPadding="false"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                app:backgroundTintMode="add"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yes" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/info"
                app:layout_constraintTop_toBottomOf="@+id/Send"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                tools:ignore="ContentDescription" />
            <com.github.ybq.android.spinkit.SpinKitView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/spinkit"
                android:visibility="gone"
                android:elevation="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_380sdp"
                style="@style/SpinKitView.Large.FadingCircle"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                app:SpinKit_Color="#13718D"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>