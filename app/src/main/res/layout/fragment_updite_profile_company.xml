<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpditeProfileCompany">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/c1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_backing"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:id="@+id/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:textStyle="bold"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:textColor="#13718D"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/textcreate" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutCommercial_Registration_No"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/commercial_registration_no"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textcreate">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CommercialRegistrationNo"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutCompanyName"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/company_name"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutCommercial_Registration_No">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/CompanyName"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/inputTextLayoutnumberphone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/number_phone"
                android:background="@drawable/style_button"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="start|center"
                android:textSize="@dimen/_15sdp"
                style="@style/text"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:paddingStart="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutCompanyName" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputTextLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"

                style="@style/text_input_style"

                android:hint="@string/email"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutnumberphone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:fontFamily="@font/notolkeaarabic_bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_13sdp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/style_button"
                android:id="@+id/l1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutEmail">

                <Spinner
                    android:id="@+id/TypeofCompany"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"


                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:id="@+id/l2"
                android:background="@drawable/style_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l1"

                >

                <Spinner
                    android:id="@+id/inputTextLayoutHeadquarters"
                    android:layout_width="match_parent"
                    android:layout_height="57dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/inputTextLayoutcommercialregisterphoto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                style="@style/text"
                android:gravity="start|center"
                android:drawablePadding="@dimen/_15sdp"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/style_button"
                android:drawableEnd="@drawable/upload"

                android:text="@string/commercial_register_photo"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l2" />


            <TextView
                android:id="@+id/inputTextLayoutpassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:gravity="start|center"
                android:textSize="@dimen/_15sdp"
                style="@style/text"
                android:background="@drawable/style_button"

                android:paddingStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"


                android:text="@string/password"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputTextLayoutcommercialregisterphoto" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="57dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutpassword"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/send"
                android:includeFontPadding="false"
                android:fontFamily="@font/notolkeaarabic_bold"

                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:backgroundTintMode="add"
                android:background="@drawable/style_buttonsignup"
                android:textSize="20sp"
                android:elevation="3dp"
                android:textAllCaps="false"
                android:id="@+id/Send" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>