<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/textback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/stilye_button_info"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                tools:ignore="MissingConstraints" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 SR"
                android:background="@drawable/tag"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@id/textback"
                app:layout_constraintEnd_toEndOf="@id/textback"

                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/textpric" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:text="first package"
                android:textColor="#13718D"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/textpric"
                app:layout_constraintStart_toStartOf="@id/textback"
                app:layout_constraintTop_toTopOf="@id/textback"
                android:id="@+id/textone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#13718D"
                app:layout_constraintStart_toStartOf="@id/textback"
                app:layout_constraintEnd_toEndOf="@id/textback"
                app:layout_constraintTop_toBottomOf="@id/textone"
                android:id="@+id/viewone"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sahre 30 Days"
                android:layout_marginEnd="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textback"
                app:layout_constraintTop_toBottomOf="@id/viewone"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/textD"
                style="@style/text" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="57dp"
                app:layout_constraintStart_toStartOf="@id/textback"
                app:layout_constraintBottom_toBottomOf="@id/textback"
                app:layout_constraintTop_toBottomOf="@id/textD"
                app:layout_constraintEnd_toEndOf="@id/textback"
                android:text="pay"
                android:layout_marginTop="@dimen/_10sdp"
                android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:backgroundTintMode="add"
                android:background="@drawable/style_buttonsignup"
                android:textSize="20sp"
                android:gravity="center"
                android:elevation="3dp"
                android:textAllCaps="false"
                android:id="@+id/SignUp_Searh_Work" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>