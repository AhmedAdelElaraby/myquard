<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:text="@string/error_diloge"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:textSize="@dimen/_15sdp"
    android:fontFamily="@font/notolkeaarabic_bold"

    android:id="@+id/text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_3sdp"
        android:gravity="center"
        android:fontFamily="@font/notolkeaarabic_bold"
        android:textColor="@color/black"
        android:id="@+id/texttitile"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:layout_marginTop="@dimen/_10sdp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texttitile"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/view"
        android:background="#13718D"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ok"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/style_buttonsignup"

        android:elevation="3dp"
        android:fontFamily="@font/notolkeaarabic_bold"
        android:text="@string/I_agree"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:backgroundTintMode="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>