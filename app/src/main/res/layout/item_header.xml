<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:id="@+id/layout_profile_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/imageprofile"
            app:layout_constraintBottom_toBottomOf="@+id/textname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_person"
            android:id="@+id/imageprofile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageprofile"
            android:text=""
            style="@style/text"
            android:textSize="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/textfullname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            style="@style/text"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/textfullname"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:id="@+id/textname" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/l123"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/information"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"

                android:drawableStart="@drawable/information"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/add_information"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/Staff_request"
                style="@style/text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/add"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"

                android:text="@string/staff_request"
                android:textSize="@dimen/_15sdp" />

            <TextView

                android:id="@+id/Staff"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableStart="@drawable/staff"

                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/staff"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/Show_All_jobs"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableStart="@drawable/briefcase_bri"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/show_all_jobs"
                android:textSize="@dimen/_15sdp" />




            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/subscriptions"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableStart="@drawable/sbiscripes"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/subscriptions"
                android:textSize="@dimen/_15sdp" />
            <TextView
                android:id="@+id/lang"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableStart="@drawable/sbiscripes"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/technical_support"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:drawableStart="@drawable/technical_support"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/technical_support"
                android:textSize="@dimen/_15sdp"
                 />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/SignOut"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <TextView
                android:id="@+id/SignOut"
                style="@style/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:drawableStart="@drawable/sign_out"
                android:drawablePadding="@dimen/_20sdp"
                android:padding="@dimen/_5sdp"
                android:text="@string/sign_out"
                android:textSize="@dimen/_15sdp"
                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"

            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_125sdp"
            android:src="@drawable/logo_home"
            app:layout_constraintTop_toBottomOf="@id/l123"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_125sdp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="@+id/logo"
            app:layout_constraintStart_toEndOf="@id/logo"
            app:layout_constraintTop_toBottomOf="@+id/l123">

            <TextView
                android:id="@+id/name_company"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="شركة حراسات السعودية"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/urlcompany"
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.mygaurd.com"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/_20sdp"
    android:id="@+id/web"
    android:layout_marginTop="@dimen/_5sdp"
    app:layout_constraintTop_toBottomOf="@id/logo"

    android:layout_marginBottom="@dimen/_5sdp"
    tools:ignore="MissingConstraints">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/instagram"
        android:layout_marginStart="@dimen/_10sdp"
        android:id="@+id/instagram"/>
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook"
        android:layout_marginStart="@dimen/_20sdp"
        android:id="@+id/facebook"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twitter"
        android:layout_marginStart="@dimen/_20sdp"
        android:id="@+id/twitter"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/snapchat"
        android:layout_marginStart="@dimen/_20sdp"
        android:id="@+id/snapchat"/>

</LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>