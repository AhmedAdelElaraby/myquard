<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/stilye_button_info"
            android:layout_height="wrap_content">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 SR"
                android:textColor="@color/white"
                android:background="@drawable/tag"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/textpric" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:text="first package"
                android:textColor="#13718D"
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/textone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#13718D"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textone"
                android:id="@+id/viewone"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sahre 30 Days"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewone"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_10sdp"
                android:id="@+id/textD"
                style="@style/text" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_200sdp"
                android:layout_height="57dp"

                app:layout_constraintTop_toBottomOf="@+id/textD"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                android:text="pay"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"

                app:backgroundTintMode="add"
                android:background="@drawable/style_buttonsignup"
                android:textSize="20sp"

                android:textAllCaps="false"
                android:id="@+id/SignUp_Searh_Work" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>