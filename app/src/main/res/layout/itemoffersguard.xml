<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:background="@drawable/stilye_button_info"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/logo_home"
            android:padding="@dimen/_1sdp"
            android:id="@+id/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#13718D"

            app:layout_constraintStart_toEndOf="@id/image"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="@id/image"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/notolkeaarabic_bold"
            android:id="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"
            android:text="1232435"
            style="@style/text"
            android:fontFamily="@font/notolkeaarabic_bold"
            android:textSize="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/time" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical"
            android:id="@+id/l1"
            app:layout_constraintTop_toBottomOf="@id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/posation"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/posation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/city" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rest_days"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/rest_days" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_number_of_working_hours"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/The_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/salary"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/Salary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Last_date_for_admission"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/Last_date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/l2"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/l1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_130sdp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutpassword"

                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/accept"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                app:backgroundTintMode="add"
                android:background="#4CAF50"
                android:textSize="@dimen/_15sdp"
                android:elevation="3dp"
                android:textAllCaps="false"
                android:id="@+id/Accept" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_130sdp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTextLayoutpassword"

                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/notolkeaarabic_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                app:backgroundTintMode="add"
                android:background="#F42020"
                android:textSize="@dimen/_15sdp"
                android:elevation="3dp"
                android:textAllCaps="false"
                android:id="@+id/cancel" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>